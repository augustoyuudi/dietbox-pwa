.character-attributes
  display flex
  align-items center
  justify-content center
  gap 0 80px

  @media screen and (min-width 1024px)
    width 320px
    height 350px

  .character-attribute
    margin-bottom 1rem

    &:last-of-type
      margin-bottom 0
    h5
      font-size .9rem
      margin-bottom .4rem

    p
      font-size 1.2rem
      color yellow
