.mask
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 999
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.5)

  .loader-container
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

    .loader
      border 8px solid var(--bg-navbar)
      border-top 8px solid var(--border)
      border-radius 50%
      width 80px
      height 80px
      animation spin 2s linear infinite
