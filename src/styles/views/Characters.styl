.character
  .live-search
    text-align center
    margin-bottom 1rem

.characters-list
  list-style none
  display flex
  flex-wrap wrap
  justify-content center
  gap .5rem
  margin-bottom 3rem

  &__item
    width 320px
    height 350px

    &:hover
      cursor pointer
      animation tilt-up .4s ease

    img
      display block
      width 100%
      height 80%

    .character-resume
      margin-left .5rem

      &__id
        font-size .9rem
        margin-bottom 5px

      &__name
        font-size 1.2rem
        margin-bottom 5px

      &__age
        background-color $yellow1
        margin-right 5px

      &__gender
        background-color $orange1
