.character-details
  display flex
  flex-direction column
  align-items center
  gap 20px 0
  width 320px
  margin 0 auto

  &__name
    display inline-block
    font-size 1.75rem
    margin-right .5rem

  &__avatar
    width 320px
    height 350px
    background-color $orange1

  .films
    width 100%
    display flex
    flex-direction column
    gap 15px 0

    &__film
      display flex
      justify-content space-between
      gap 0 1rem
      padding 1rem

    &__title
      font-size 1.2rem
      margin-bottom .5rem

    &__director,
    &__release-date
      display inline-block

    &__director
      margin-right .5rem

    &__cover
      height 70px
      width 50px